<footer style="border-top:1px solid rgba(10,18,32,.08);margin-top:48px;">
  <div style="max-width:1100px;margin:0 auto;padding:28px 20px;display:grid;grid-template-columns:1fr 1fr;gap:16px;">
    <!-- Left column -->
    <div>
      <strong>Compliance365</strong>
      <p style="opacity:.75;margin:.4rem 0 0">Cyber, AI & Privacy Compliance</p>
      <p style="opacity:.65;margin:.4rem 0 0">ABN {footer.abn}</p>
      <nav style="margin-top:.5rem;display:flex;gap:12px;flex-wrap:wrap;font-size:.9rem;">
        <a href="/privacy-policy" style="opacity:.75">Privacy Policy</a>
        <a href="/terms" style="opacity:.75">Terms & Conditions</a>
      </nav>
    </div>

    <!-- Right column -->
    <div style="justify-self:end;text-align:right;">
      <p style="margin:0;"><a href={"mailto:"+footer.email}>{footer.email}</a></p>
      <p style="margin:.25rem 0 0;">{footer.phone}</p>
      <p style="margin:.25rem 0 0;opacity:.75;">{footer.address}</p>
    </div>
  </div>
</footer>
