---
import Base from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const base = import.meta.env.BASE_URL || '/';
---
<Base title="Resources — Compliance365" description="Download free checklists and guides to help you get audit-ready faster.">
  <Header />

  <section class="container section">
    <h1>Resources</h1>
    <p class="muted" style="max-width:760px">
      Practical tools to help you benchmark readiness, identify gaps, and prepare for audits.  
      All checklists are free and come with a downloadable PDF report.
    </p>

    <div class="grid-3" style="margin-top:16px">
      <!-- ISO 27001 -->
      <a class="card lift" href={`${base}checklist/iso27001`} style="color:inherit">
        <h3>ISO 27001 Readiness Checklist</h3>
        <p class="muted">Evaluate ISMS scope, risk, controls and audit readiness.</p>
        <span class="pill">Start checklist →</span>
      </a>

      <!-- ISO 27701 -->
      <a class="card lift" href={`${base}checklist/iso27701`} style="color:inherit">
        <h3>ISO 27701 Readiness Checklist</h3>
        <p class="muted">Assess your privacy program: ROPA, DPIAs and subject rights.</p>
        <span class="pill">Start checklist →</span>
      </a>

      <!-- ISO 42001 -->
      <a class="card lift" href={`${base}checklist/iso42001`} style="color:inherit">
        <h3>ISO 42001 Readiness Checklist</h3>
        <p class="muted">Check your AI governance, model inventory and oversight readiness.</p>
        <span class="pill">Start checklist →</span>
      </a>

      <!-- Placeholder for future whitepapers/guides -->
      <div class="card lift" style="color:inherit; opacity:.6; pointer-events:none">
        <h3>ISO 27001 Starter Pack</h3>
        <p class="muted">Scope template, SoA starter, internal audit plan.</p>
        <span class="pill">Coming soon</span>
      </div>
    </div>
  </section>

  <Footer />
</Base>
