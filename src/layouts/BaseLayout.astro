---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const { title = 'Compliance365 â€” Audit-ready compliance, simplified.' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Cyber, AI & privacy compliance for Australian healthcare, government and SaaS. ISO 27001, ISO 42001, ISO 27701, SOC 2, Essential Eight, IRAP." />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
      :root{--fg:#0a0a0a;--muted:#666;--bg:#fff}
      body{font-family:Inter,system-ui,-apple-system,Segoe UI,Roboto,sans-serif;margin:0;color:var(--fg);background:var(--bg);line-height:1.6}
      h1,h2,h3{line-height:1.2}
      .hero-btns a{display:inline-block;margin-right:12px;padding:12px 16px;border-radius:10px;text-decoration:none;font-weight:600}
      .btn-primary{background:#0a0a0a;color:#fff;border:1px solid #0a0a0a}
      .btn-ghost{background:transparent;color:#0a0a0a;border:1px solid #0a0a0a}
      .grid-3{display:grid;grid-template-columns:repeat(3,1fr);gap:14px}
      @media (max-width:900px){.grid-3{grid-template-columns:1fr}}
      .card{border:1px solid rgba(0,0,0,.08);border-radius:12px;padding:16px}
      .muted{color:var(--muted)}
      .pill{font-size:.85rem;border:1px solid rgba(0,0,0,.12);padding:4px 8px;border-radius:999px}
      .logobar{display:flex;gap:24px;opacity:.7;flex-wrap:wrap}
      a{color:inherit}
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>