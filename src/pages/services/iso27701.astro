---
import Base from '../../layouts/BaseLayout.astro'; 
import Header from '../../components/Header.astro'; 
import Footer from '../../components/Footer.astro';
const base = import.meta.env.BASE_URL || '/';
const ctaUrl = base + 'book';            // or base + 'contact' if you prefer
const ctaLabel = 'Book a call';
---
<Base title="ISO 27701 (Privacy) — Compliance365" description="Extend your ISMS with a PIMS: DPIAs, ROPAs, privacy controls and training mapped to ISO 27701.">
  <Header />
  <section class="container section">
    <div class="grid-2" style="align-items:center">
      <div>
        <h1>ISO 27701 (Privacy)</h1>
        <p class="muted">Extend your ISMS with a Privacy Information Management System (PIMS): DPIAs, ROPAs, privacy controls and awareness — aligned to ISO 27701.</p>
        <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:10px">
          <span class="pill">DPIAs</span><span class="pill">ROPA</span><span class="pill">Privacy controls</span><span class="pill">Training</span><span class="pill">Third parties</span>
        </div>
        <a class="btn btn-primary" href={ctaUrl}>Plan your PIMS</a>
      </div>
      <div class="card" style="padding:0;overflow:hidden;border-radius:22px">
        <img src={(import.meta.env.BASE_URL)+'assets/illus-iso27001.svg'} alt="ISO 27701 visual" style="width:100%;height:auto"/>
      </div>
    </div>
  </section>

  <section class="container section">
    <h2>What’s included</h2>
    <div class="grid-3" style="margin-top:14px">
      <div class="card"><h3>DPIA framework</h3><p class="muted">Templates, thresholds and approvals for privacy impact.</p></div>
      <div class="card"><h3>ROPA & lifecycle</h3><p class="muted">Records of processing, retention and deletion standards.</p></div>
      <div class="card"><h3>Privacy controls</h3><p class="muted">Data minimisation, purpose limitation, rights handling and incident response.</p></div>
      <div class="card"><h3>Third-party management</h3><p class="muted">Due diligence, contractual clauses and monitoring.</p></div>
      <div class="card"><h3>Training & awareness</h3><p class="muted">Role-based content and ongoing refreshers.</p></div>
      <div class="card"><h3>Audit-ready evidence</h3><p class="muted">SharePoint evidence mapped to the standard.</p></div>
    </div>
  </section>

  <Footer />
</Base>
