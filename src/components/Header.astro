---
const base = import.meta.env.BASE_URL;
const ctaUrl = base + 'contact';
const ctaLabel = 'Book a consultation';
---
<header class="header">
  <div class="container" style="height:70px;display:flex;align-items:center;justify-content:space-between;">
    <a href={base} class="brand">
      <img src={(import.meta.env.BASE_URL) + 'assets/logo.png'} alt="Compliance365" height="26" style="vertical-align:middle" />
      <strong style="margin-left:8px;vertical-align:middle">Compliance365</strong>
    </a>
    <nav class="nav">
      <a href={base + '#services'}>Services</a>
      <a href={base + 'case-studies'}>Case Studies</a>
      <a href={base + 'about'}>About</a>
      <a href={base + '#checklist'} class="btn btn-ghost">Checklist</a>
      <a href={ctaUrl} class="btn btn-primary">{ctaLabel}</a>
    </nav>
  </div>
</header>
