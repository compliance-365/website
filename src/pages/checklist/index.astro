---
import Base from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
const base = import.meta.env.BASE_URL || '/';
---
<Base title="Compliance Checklists — ISO 27001 / 27701 / 42001" description="Quick readiness checks with score, next steps and downloadable PDF.">
  <Header />

  <section class="container section">
    <h1>Readiness Checklists</h1>
    <p class="muted" style="max-width:760px">
      Answer a few questions and get a score, tailored next steps, and a downloadable PDF report.  
      Choose a checklist to begin:
    </p>

    <div class="grid-3" style="margin-top:16px">
      <a class="card lift" href={`${base}checklist/iso27001`} style="color:inherit">
        <h3>ISO 27001</h3>
        <p class="muted">ISMS scope, risk, controls, SoA and audit-readiness.</p>
        <span class="pill">Start checklist →</span>
      </a>
      <a class="card lift" href={`${base}checklist/iso27701`} style="color:inherit">
        <h3>ISO 27701 (Privacy)</h3>
        <p class="muted">PIMS, DPIA, ROPA, subject rights, data lifecycle.</p>
        <span class="pill">Start checklist →</span>
      </a>
      <a class="card lift" href={`${base}checklist/iso42001`} style="color:inherit">
        <h3>ISO 42001 (AI)</h3>
        <p class="muted">AIMS governance, model inventory, AI risk, oversight.</p>
        <span class="pill">Start checklist →</span>
      </a>
    </div>
  </section>

  <Footer />
</Base>
