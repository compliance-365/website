        <!-- REMEDIATION -->
        <g id="panel-remed" hidden>
          <rect x="0" y="0" width="490" height="326" rx="14" fill="#fff" stroke="#e8ebf3"/>
          <text x="16" y="26" font-weight="800" font-size="14" fill="#0b1220">Risk Remediation</text>
          <!-- kanban-like lanes -->
          <g font-size="12">
