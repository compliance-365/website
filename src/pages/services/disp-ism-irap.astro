---
import Base from '../../layouts/BaseLayout.astro'; import Header from '../../components/Header.astro'; import Footer from '../../components/Footer.astro';
---
<Base title="DISP, ISM & IRAP — Compliance365" description="Defence security, Australian ISM alignment and IRAP assessments — delivered as one integrated service.">
  <Header />
  <section class="container section">
    <div class="grid-2" style="align-items:center">
      <div>
        <h1>DISP, ISM & IRAP</h1>
        <p class="muted">Defence security uplift, Australian ISM alignment and IRAP assessments delivered as one integrated service — from gap to remediation to audit preparation.</p>
        <div style="display:flex;gap:10px;flex-wrap:wrap;margin-top:10px">
          <span class="pill">DISP uplift</span><span class="pill">ISM alignment</span><span class="pill">IRAP assessment</span><span class="pill">Evidence packs</span>
        </div>
        <div style="margin-top:16px"><a class="btn btn-primary" href="/contact">Plan DISP/ISM/IRAP</a></div>
      </div>
      <div class="card" style="padding:0;overflow:hidden;border-radius:22px">
        <img src={(import.meta.env.BASE_URL)+'assets/illus-disp-ism-irap.svg'} alt="DISP ISM IRAP visual" style="width:100%;height:auto"/>
      </div>
    </div>
  </section>

  <section class="container section">
    <h2>What’s included</h2>
    <div class="grid-3" style="margin-top:14px">
      <div class="card"><h3>Gap & plan</h3><p class="muted">DISP/ISM gap analysis, remediation plan and sequencing.</p></div>
      <div class="card"><h3>Control build</h3><p class="muted">Pragmatic control implementation with evidence mapping.</p></div>
      <div class="card"><h3>IRAP support</h3><p class="muted">Assessment coordination, evidence packs and remediation.</p></div>
    </div>
  </section>

  <Footer />
</Base>
