---
import Base from '../../layouts/BaseLayout.astro';
const cases = await Astro.glob('../../../content/case-studies/*.md');
cases.sort((a,b)=>a.frontmatter.title.localeCompare(b.frontmatter.title));
---
<Base title="Case Studies — Compliance365">
  <section style="max-width:1100px;margin:0 auto;padding:36px 20px;">
    <h1 style="font-size:1.8rem;margin:0 0 12px">Case Studies</h1>
    <div style="display:grid;grid-template-columns:repeat(3,1fr);gap:16px">
      {cases.map((c) => (
        <a href={c.url} style="text-decoration:none;color:inherit;border:1px solid rgba(10,18,32,.08);border-radius:12px;padding:16px;">
          <h3 style="margin:0 0 6px">{c.frontmatter.title}</h3>
          <p style="margin:0 0 8px;opacity:.75">{c.frontmatter.summary}</p>
          <span style="font-size:.9rem;border:1px solid rgba(10,18,32,.15);padding:4px 8px;border-radius:999px">Read more →</span>
        </a>
      ))}
    </div>
  </section>
</Base>