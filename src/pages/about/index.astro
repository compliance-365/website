---
import Base from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const base = import.meta.env.BASE_URL || '/';
---

<Base title="About — Compliance365">
  <Header />

  <section class="container section">
    <h1>About Compliance365</h1>
    <div class="card">
      <p>
        We help Australian healthcare, government, and SaaS organisations achieve and maintain
        <strong>cyber, AI, and privacy compliance</strong> with less effort.
      </p>
      <ul>
        <li>CISSP, CISM, CISA certified leadership</li>
        <li>Deep Microsoft 365 / E5 expertise</li>
        <li>SharePoint-first evidence and ISMS design</li>
      </ul>
    </div>
  </section>

  <!-- Our Story -->
  <section class="container section">
    <div class="grid-2" style="align-items:center; gap:40px;">
      <div>
        <h2>Our Story</h2>
        <p>
          We founded Compliance365 on a simple belief: <strong>you shouldn’t need to buy yet another
          platform to get compliant</strong>. Instead, we use the tools you already have —
          <strong>Microsoft 365, Azure, and your existing stack</strong> — to automate evidence and
          build audit-ready processes inside your workflows.
        </p>
        <p>
          From <strong>ISO 27001</strong> and <strong>SOC 2</strong> to <strong>ISO 27701 privacy</strong> 
          and <strong>ISO 42001 AI governance</strong>, our approach aligns directly to how auditors test,
          reduces manual effort, and leaves you with a system your team can confidently run.
        </p>
      </div>

      <!-- Image -->
      <div>
        <img
          src={`${base}assets/about-team.jpg`}
          alt="Compliance365 team working with clients"
          style="width:100%; border-radius:16px; box-shadow:0 8px 24px rgba(0,0,0,.12)"
        />
      </div>
    </div>
  </section>

  <Footer />
</Base>
