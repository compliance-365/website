---
import Base from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
const base = import.meta.env.BASE_URL || '/';
---
<Base title="Book a Call — Compliance365" description="Pick a 15 or 30 minute slot.">
  <Header />

  <section class="container section">
    <div class="grid-2" style="align-items:start">
      <div>
        <h1>Book a call</h1>
        <p class="muted">
          Choose a time that works. We’ll map your fastest path to certification and answer your questions.
        </p>
        <ul class="muted">
          <li>15 or 30 minutes</li>
          <li>Microsoft Teams link auto-generated</li>
          <li>No selling — just practical next steps</li>
        </ul>
      </div>

      <!-- ✅ Calendly embed with your link -->
      <div class="card" style="padding:0;overflow:hidden">
        <div
          class="calendly-inline-widget"
          data-url="https://calendly.com/matt-nicholas-compliance365/30min"
          style="min-width:320px;height:680px;"
        ></div>
        <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" defer></script>
      </div>
    </div>
  </section>

  <Footer />
</Base>
