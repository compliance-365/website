---
const base = import.meta.env.BASE_URL || '/';
const ctaUrl = base + 'book';            // or base + 'contact' if you prefer
const ctaLabel = 'Book a call';
---
<header class="header">
  <div class="container" style="height:70px;display:flex;align-items:center;justify-content:space-between;">
    <a href={base} class="brand" aria-label="Compliance365 home">
      <img src={base + 'assets/logo.png'} alt="Compliance365" height="28" />
      <strong>Compliance365</strong>
    </a>

    <nav class="nav" aria-label="Main">
      <a href={base + '#services'}>Services</a>
      <a href={base + 'case-studies'}>Case Studies</a>
      <a href={base + 'about'}>About</a>
      <a href={base + 'resources'}>Resources</a>
      <a href={base + 'blog'}>Insights</a>
      <a href={base + '#testimonials'}>Testimonials</a>
      <!-- If you want the old checklist anchor, point it to the new hub: -->
      <!-- <a href={base + 'resources'} class="btn btn-ghost">Checklist</a> -->
      <a href={ctaUrl} class="btn btn-primary">{ctaLabel}</a>
    </nav>
  </div>
</header>
