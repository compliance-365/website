            <rect x="16" y="46" width="148" height="260" rx="10" fill="#fafbff" stroke="#eef1fb"/>
            <text x="28" y="66" fill="#586174" font-weight="800">To Do</text>
            <rect x="28" y="78" width="124" height="34" rx="8" fill="#fff" stroke="#e8ebf3"/><text x="36" y="100" fill="#0b1220">DLP policy review</text>
            <rect x="28" y="120" width="124" height="34" rx="8" fill="#fff" stroke="#e8ebf3"/><text x="36" y="142" fill="#0b1220">Backups drill</text>

